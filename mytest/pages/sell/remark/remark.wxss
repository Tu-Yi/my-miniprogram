/* pages/sell/remark/remark.wxss */
page{
    margin:0;
    padding:0;
    box-sizing: border-box;
}
.main {
    padding:0 20rpx;
    padding-top: 10rpx;
}
.header {
    background: #fff;
    margin-bottom: 30rpx;
    padding:0 20rpx 0 0;
}
.info {
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: start;
    align-items: center;
}
.keywords {
    padding:10rpx;
    line-height: 1.2;
    border: 1px solid #eeeeee;
    margin-right: 20rpx;
    font-size: 12px;
    color: #888888;
    margin-bottom: 20rpx;
}
.keywords:last-child {
    margin-right: 0;
}
.textarea {
    font-size: 15px;
    background-color: #eeeeee;
    padding:10rpx;
    margin-bottom: 20rpx;
    height: 350rpx;
    width:100%;
}

.placeholder {
    font-size: 15px;
    color: gray;
}
button {
    background: #ff8557;
    color: #fff;
}
