page{
  font-family: Circular, PingFang-SC, "Hiragino Sans GB", 微软雅黑, "Microsoft YaHei", "Heiti SC" !important;
 color: #3d4451;
}
swiper {
  height: 300rpx;
}
swiper image {
  display: block;
  width:100%;
}
.title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-left: 2px solid lightgreen;
  height: 60rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin: 20rpx 0;
}
.title text:last-child {
  color: green;
  font-size: 15px;
}
.section {
  border-bottom: 5px solid #d3d3d3;
  padding-bottom: 15rpx;
}
.section .content {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-around;
}
.section .content .content-item {
  position: relative;
  margin: 5px 0;
  height:250rpx;
  width:47%;
}
.section .content .content-item image {
  width: 100%;
  height:100%;
}
.section .content .content-item .content-item-text {
  box-sizing: border-box;
  position: absolute;
  bottom: 0;
  font-size: 10px;
  color: white;
  background: -webkit-linear-gradient(bottom,rgba(0,0,0,0.8),rgba(0,0,0,0));
  width: 100%;
  height: 125rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-left: 2%;
  padding-right: 2%;
  padding-bottom: 1%;
}
.list-item {
  height: 500rpx;
}
.list-item-images {
  position: relative;
  height: 300rpx;
}
.list-item-images .bigimg {
  width: 100%;
  height: 100%;
}
.list-item-text {
  height:200rpx
}
.logo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: absolute;
  bottom: -50rpx;
  right: 50rpx;
}
.list-item-text {
  padding: 0 2%;
}
.list-item-text-title {
  margin: 20px 0 10px 0;
}
.list-item-text-content {
  font-size: 12px;
  color: #d3d3d3;
  margin-bottom: 20rpx;
}